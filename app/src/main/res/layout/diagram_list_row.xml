<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dip" >

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="diagram name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/diagram_quantity_image"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <ImageView
        android:id="@+id/diagram_duration_image"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_below="@+id/btn_share_quantity"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_share_quantity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/diagram_quantity_image"
        android:layout_below="@+id/diagram_quantity_image"
        android:backgroundTint="@color/colorPrimaryGreen"
        android:background="@android:drawable/ic_menu_share" />

    <Button
        android:id="@+id/btn_share_duration"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/diagram_quantity_image"
        android:layout_below="@+id/diagram_duration_image"
        android:backgroundTint="@color/colorPrimaryGreen"
        android:background="@android:drawable/ic_menu_share" />


</RelativeLayout>