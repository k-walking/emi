<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dip" >

    <TextView
        android:id="@+id/executionName"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignBaseline="@+id/btn_delete_execution"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:text="routineName"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/btn_delete_execution"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@android:drawable/ic_delete"
        android:backgroundTint="#00bb66"
        android:textColor="#666666"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/executionName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="59dp"
        android:background="@android:drawable/ic_media_play"
        android:backgroundTint="#00bb66"
        android:textColor="#666666"
        android:textSize="16sp" />
</RelativeLayout>