<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ListView
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <EditText
        android:id="@+id/ed_category_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/str_duration"/>

    <EditText
        android:id="@+id/ed_duration"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/str_duration"/>


    <EditText
        android:id="@+id/ed_quantity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/str_quantity"/>


    <EditText
        android:id="@+id/ed_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/str_id"/>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/str_btn_ok"/>

    <ListView
        android:id="@+id/listViewRoutines"
        android:layout_width="368dp"
        android:layout_height="336dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="159dp" >



    </ListView>
</LinearLayout>